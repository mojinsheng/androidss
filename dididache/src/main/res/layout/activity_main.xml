<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/calculate_route_start_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@color/colorBlue"
        android:text="开始导航"
        android:textColor="#fff"
        android:visibility="gone" />

    <fragment
        android:id="@+id/map"
        class="com.amap.api.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/calculate_route_start_navi" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/colorgray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorblue"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/xmy_back"
                android:layout_alignParentLeft="false"
                android:background="@drawable/xmy_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="广州"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dip"
                android:text="取消订单"
                android:id="@+id/btn_cancel"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
        <RelativeLayout
            android:layout_width="180dip"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!--时间-->
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_margin="2dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"
                android:layout_marginLeft="3dip"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>
        </LinearLayout>
            <!--开始位置-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始位置:"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="番禺员岗"
                    android:layout_marginLeft="3dip"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!--目的位置-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地:"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="番禺桥兴商务大厦"
                    android:layout_marginLeft="3dip"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
            </LinearLayout>
                <!--电话-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金额:"
                        android:gravity="right"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:layout_marginLeft="3dip"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/xmy_phone"
                        android:layout_weight="1"/>
                    <!--电话-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电话:"
                            android:gravity="right"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18665053437"
                            android:layout_marginLeft="3dip"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"/>
                    </LinearLayout>
                 </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="#00000000"
        android:layout_marginBottom="20dip"
        android:layout_alignParentBottom="true"
        >
        <Button
        android:layout_width="140dip"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:text="抢 单"
        android:id="@+id/btn_robbing"
        android:textColor="@color/colorwhite"
        android:layout_centerInParent="true"
        android:background="@color/colorBlue"/>
        <Button
            android:layout_width="140dip"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/btn_outset"
            android:text="出 发"
            android:textColor="@color/colorwhite"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@color/colorBlue"/>
        <Button
            android:layout_width="140dip"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/btn_start"
            android:text="到达出发点"
            android:textColor="@color/colorwhite"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@color/colorBlue"/>
        <Button
            android:layout_width="140dip"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/btn_confirm"
            android:text="确认上车"
            android:textColor="@color/colorwhite"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@color/colorBlue"/>
        <Button
            android:layout_width="140dip"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/btn_confirmend"
            android:text="确认到达"
            android:textColor="@color/colorwhite"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@color/colorBlue"/>

    </RelativeLayout>
</RelativeLayout>
